<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="visible">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@android:color/background_light">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_carro"
                android:layout_width="104dp"
                android:layout_height="103dp"
                android:layout_marginStart="12dp"
                android:contentDescription="@string/imagemCarro"
                app:srcCompat="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingEnd="5sp"
                android:paddingStart="5sp">

                <TextView
                    android:id="@+id/txt_marcanome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:text="@string/marcanome"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/txt_preco"
                    android:layout_width="167dp"
                    android:layout_height="wrap_content"
                    android:text="@string/preco"
                    android:textColor="@android:color/black" />

                <Button
                    android:id="@+id/btb_detalhes"
                    android:layout_width="wrap_content"
                    android:layout_height="27dp"
                    android:layout_marginEnd="83dp"
                    android:height="10dp"
                    android:paddingTop="4dp"
                    android:text="@string/detalhes"
                    android:textSize="12sp" />


            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>